@page 
@model OnlineStoreV1.Pages.Categories.CategoriesModel

@{
    ViewData["Title"] = "КАТЕГОРИИ";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 classs="text-primary">
                Create Category
            </h2>
               <hr />   
        </div>
        <div class="mb-3">
            <label>Name</label>
            <input asp-for="Name" class="form-control"></input>
        </div>
          <div class="mb-3">
            <label>Description</label>
            <input asp-for="Description" class="form-control"></input>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="/Admin/AdminPanel" class="btn btn-secondary" style="width:150px">Назад к списку</a>
    </div>

</form>