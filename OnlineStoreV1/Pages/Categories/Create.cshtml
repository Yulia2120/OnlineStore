@page 
@model OnlineStoreV1.Pages.Categories.CategoriesModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 classs="text-primary">
                Create Category
            </h2>
        </div>
               <hr />   
        <div class="text-danger" asp-validation-summary="ModelOnly"></div> @*установить реквайред на категорию name*@
        <div class="mb-3">
            <label asp-for="Category.Name">Name</label>
            <input asp-for="Category.Name" class="form-control"></>
        </div>
        <span asp-validation-for="Category.Name"></span>
          <div class="mb-3">
            <label asp-for="Category.Description">Description</label>
            <input asp-for="Category.Description" class="form-control"></>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="/Admin/AdminPanel" class="btn btn-outline-primary" style="width:150px">Назад к списку</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}  @*чтобы не перегружалась страница*@